{
  "branches": [
    "MC1.20.4",
    {
      "name": "MC1.20.4-beta",
      "prerelease": true
    }
  ],
  "tagFormat": "v${version}-MC1.20.4",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    "semantic-release-export-data",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "neoforge/build/libs/!(*-@(dev|sources|shadow)).jar",
            "name": "DisableChristmasChests-neoforge-${nextRelease.gitTag}.jar",
            "label": "DisableChristmasChests-neoforge-${nextRelease.gitTag}.jar"
          },
          {
            "path": "fabric/build/libs/!(*-@(dev|sources|shadow)).jar",
            "name": "DisableChristmasChests-fabric-${nextRelease.gitTag}.jar",
            "label": "DisableChristmasChests-fabric-${nextRelease.gitTag}.jar"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/release.sh \"${nextRelease.version}\""
      }
    ]
  ]
}
