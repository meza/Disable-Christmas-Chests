{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    "semantic-release-export-data",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Changelog",
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/libs/*.jar"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/release.sh \"${nextRelease.version}\""
      }
    ],
    ["semantic-release-discord-notifier", {
      "embedJson": {
        "content": "Disable Christmas Chests: ${nextRelease.version}",
        "color": 5814783,
        "embeds": [
          {
            "title": "What changed?",
            "description": "${nextRelease.notes}",
            "url": "https://x.com",
            "color": 7377919,
            "footer": {
              "text": "Curseforge might take a few hours to approve the file so if you want to download it immediately, use the Modrinth link."
            }
          }
        ],
        "components": [
          {
            "type": 1,
            "components": [
              {
                "type": 2,
                "style": 5,
                "label": "Download from Modrinth",
                "url": "https://modrinth.com/mod/disable-christmas-chests"
              },
              {
                "type": 2,
                "style": 5,
                "label": "Download from Curseforge",
                "url": "https://www.curseforge.com/minecraft/mc-mods/disablechristmaschests/"
              }
            ]
          }
        ]
      }
    }]
  ]
}
